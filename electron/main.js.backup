// Intercept requests to fix paths for static assets
function setupProtocolInterceptor() {
  protocol.interceptFileProtocol('file', (request, callback) => {
    let url = request.url.substr(7); // Remove 'file://'

    // Handle Windows paths
    if (process.platform === 'win32') {
      url = url.replace(/^\/([A-Za-z]):/, '$1:');
    }

    // If the request is for _next, icons, or manifest, serve from out directory
    if (url.includes('_next') || url.includes('icons') || url.includes('manifest')) {
      const fileName = url.split('/').pop().split('\\').pop();
      const searchPaths = [
        path.join(__dirname, '../out/_next'),
        path.join(__dirname, '../out/icons'),
        path.join(__dirname, '../out')
      ];

      // Search for the file
      for (const searchPath of searchPaths) {
        const findFile = (dir, filename) => {
          if (!fs.existsSync(dir)) return null;

          const files = fs.readdirSync(dir);
          for (const file of files) {
            const filePath = path.join(dir, file);
            const stat = fs.statSync(filePath);

            if (stat.isDirectory()) {
              const found = findFile(filePath, filename);
              if (found) return found;
            } else if (file === filename || filePath.includes(filename)) {
              return filePath;
            }
          }
          return null;
        };

        const foundPath = findFile(searchPath, fileName);
        if (foundPath) {
          callback({ path: foundPath });
          return;
        }
      }
    }

    callback({ path: url });
  });
}

async function createWindow() {
  // Create the browser window
  mainWindow = new BrowserWindow({
    width: 1400,
    height: 900,
    minWidth: 800,
    minHeight: 600,
    title: 'Inventory Pro - Stationery & Games Management',
    icon: path.join(__dirname, '../public/icons/icon-512x512.png'),
    webPreferences: {
      nodeIntegration: false,
      contextIsolation: true,
      enableRemoteModule: false,
      webSecurity: false,
      allowRunningInsecureContent: false,
      devTools: true
    },
    backgroundColor: '#f9fafb',
    show: false,
    autoHideMenuBar: true,
  });

  // Load the app
  if (isDev) {
    await mainWindow.loadURL('http://localhost:3000');
  } else {
    // Use loadFile which properly handles file:// protocol
    const indexPath = path.join(__dirname, '../out/index.html');
    console.log('Loading file:', indexPath);
    console.log('File exists:', fs.existsSync(indexPath));
    await mainWindow.loadFile(indexPath);
  }

  // Show window when ready
  mainWindow.once('ready-to-show', () => {
    mainWindow.show();
    mainWindow.focus();
  });

  // Open external links in browser
  mainWindow.webContents.setWindowOpenHandler(({ url }) => {
    shell.openExternal(url);
    return { action: 'deny' };
  });

  // Open external links in browser (already added above - remove duplicate)
  // Open DevTools for debugging
  mainWindow.webContents.openDevTools();

  // Log console messages from renderer
  mainWindow.webContents.on('console-message', (event, level, message, line, sourceId) => {
    console.log(`Renderer console [${level}]:`, message);
  });

  // Create application menu
  createMenu();

  mainWindow.on('closed', () => {
    mainWindow = null;
  });

  // Log when page finishes loading
  mainWindow.webContents.on('did-finish-load', () => {
    console.log('Page loaded successfully');
  });

  // Log load failures
  mainWindow.webContents.on('did-fail-load', (event, errorCode, errorDescription) => {
    console.error('Failed to load:', errorCode, errorDescription);
  });
}

